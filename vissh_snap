REALHOME=$(getent passwd $(id -u) | cut -d ':' -f 6);
echo "home is $REALHOME"

if [ ! -f $USER_HOME/.vimrc ]; then touch $USER_HOME/.vimrc; fi;
inotifywait -e modify $USER_HOME/.vimrc;
  
if ([ -f $USER_HOME/.bashrc ] && ( ! grep -qR 'alias ssh="ssh -F $USER_HOME/.ssh/viSSHous"' $USER_HOME/.bashrc ));
  then echo 'alias ssh="ssh -F $USER_HOME/.ssh/viSSHous"' >> $USER_HOME/.bashrc && bash
fi

if ([ -f $USER_HOME/.zshrc ] && ( ! grep -qR 'alias ssh="ssh -F $USER_HOME/.ssh/viSSHous"' $USER_HOME/.zshrc ));
  then echo 'alias ssh="ssh -F $USER_HOME/.ssh/viSSHous"' >> $USER_HOME/.zshrc && zsh
fi 

echo "# last updated: $(date)" > $USER_HOME/.ssh/viSSHous
echo 'Include ~/.ssh/config' >> $USER_HOME/.ssh/viSSHous
echo "SetEnv LC_MONETARY=$(cat ~/.vimrc | base64)" >> $USER_HOME/.ssh/viSSHous
echo 'RemoteCommand mkdir -p ~/.vim; echo $LC_MONETARY > ~/.vim/visshnu; base64 --decode ~/.vim/visshnu > ~/.vimrc; echo "ðŸ˜ˆ [LOG] VimRC was configured successfully"; if ( ! command -v vim &> /dev/null ); then echo "ðŸ‘¿ [WARN] Vim not found"; sudo apt-get install vim -y &> /dev/null; if [ $? != 0 ]; then echo "ðŸ‘¿ [WARN] Vim could not be auto-installed. Try manually with \`sudo apt-get install vim -y \`"; else echo "ðŸ˜ˆ [RESOLVED] Vim was auto-installed successfully"; fi; fi; if ( grep -qR "plug#begin" ~/.vimrc); then set vimplug=true; echo "ðŸ˜ˆ [LOG] Plugin manager detected: Vim-Plug"; fi; if ( grep -qR "plugin#begin" ~/.vimrc); then set vundle=true; echo "ðŸ˜ˆ Plugin manager detected: Vundle"; fi; if ([ -z $vimplug ] && [ ! -f ~/.vim/autoload/plug.vim ]); then curl -sfLo ~/.vim/autoload/plug.vim --create-dirs https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim; if [ $? == 0 ]; then echo "ðŸ˜ˆ [LOG] Vim-Plug was auto-installed successfully"; fi; fi; if (( [ -z $vimplug ] || [ -z $vundle ]) && ( ! command -v git &> /dev/null )); then echo "ðŸ‘¿ [WARN] Git not detected, but required by plugin manager."; sudo apt-get install git -y &> /dev/null; if [ $? != 0 ]; then echo "ðŸ‘¿ [WARN] Git could not be auto-installed. Try manually with \`sudo apt-get install git\`"; else echo "ðŸ˜ˆ [RESOLVED] Git was auto-installed successfully"; fi; fi; if ( [ -z $vimplug ] && [ -f ~/.vim/autoload/plug.vim ] ) ; then echo "ðŸ˜ˆ [LOG] Installing/updating plugins with Vim-Plug"; yes | vim -c ":PlugInstall | quit! | quit!" &> /dev/null; fi; echo "ðŸ˜ˆ [LOG] viSSHous setup complete"; bash' >> $USER_HOME/.ssh/viSSHous
echo "RequestTTY yes" >> $USER_HOME/.ssh/viSSHous
